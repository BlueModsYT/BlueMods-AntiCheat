{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "bluemods:floating_text",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "scripts": {
                "animate": ["commands"]
            },
            "animations": {
                "commands": "controller.animation.commands"
            }
        },
        "component_groups": {
            "remove": {
                "minecraft:instant_despawn": {}
            },
            "off": {
                "minecraft:scale": {
                    "value": 0
                },
                "minecraft:collision_box": {
                    "width": 0.2,
                    "height": 0.2
                }
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": ["floating_text"]
            },
            "minecraft:health": {
                "value": 1,
                "max": 1,
                "min": 1
            },
            "minecraft:movement": {
                "value": 0
            },
            "minecraft:scale": {
                "value": 0
            },
            "minecraft:fire_immune": true,
            "minecraft:knockback_resistance": {
                "value": 1
            },
            "minecraft:collision_box": {
                "width": 0.2,
                "height": 0.2
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": false
            },
            "minecraft:physics": {
                "has_collision": false,
                "has_gravity": false
            },
            "minecraft:water_movement": {
                "drag_factor": 0
            },
            "minecraft:damage_sensor": {
                "triggers": {
                    "cause": "all",
                    "deals_damage": false
                }
            },
            "minecraft:nameable": {
                "allow_name_tag_renaming": true,
                "always_show": true,
                "default_trigger": {
                    "event": "off",
                    "target": "self"
                }
            },
            "minecraft:interact": {
                "interactions": [
                    {
                        "on_interact": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "player"
                                    },
                                    {
                                        "test": "has_equipment",
                                        "domain": "hand",
                                        "subject": "other",
                                        "value": "barrier"
                                    }
                                ]
                            },
                            "event": "remove"
                        },
                        "play_sounds": "hurt",
                        "interact_text": "§aRemove Text",
                        "particle_on_start": {
                            "particle_type": "spit",
                            "particle_y_offset": 0.3
                        }
                    },
                    {
                        "on_interact": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "player"
                                    },
                                    {
                                        "test": "has_equipment",
                                        "domain": "hand",
                                        "subject": "other",
                                        "value": "name_tag"
                                    },
                                    {
                                        "test": "has_tag",
                                        "subject": "other",
                                        "operator": "not",
                                        "value": "admin"
                                    }
                                ]
                            },
                            "event": "deny_rename"
                        },
                        "interact_text": "§cYou are not allowed to rename this!",
                        "particle_on_start": {
                            "particle_type": "crit",
                            "particle_y_offset": 0.3
                        }
                    }
                ]
            }
        },
        "events": {
            "remove": {
                "add": {
                    "component_groups": ["remove"]
                }
            },
            "off": {
                "add": {
                    "component_groups": ["off"]
                }
            },
            "deny_rename": {
                "queue_command": {
                    "command": ["playsound random.break @p"]
                }
            }
        }
    }
}